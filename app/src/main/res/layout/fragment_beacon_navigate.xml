<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/primary"
    android:backgroundTintMode="multiply"
    android:background="@drawable/map_street_light">
    <include
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        layout="@layout/data_item"/>
    <!-- android:background="@drawable/gracevilla_gf"-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
       <!-- <ImageView
            android:id="@+id/plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="-19dp"
            android:src="@drawable/second_floor" />-->
        <ImageView
            android:id="@+id/plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/second_floor" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:background="@color/primary_text"
        android:backgroundTint="@color/primary_text"
        android:backgroundTintMode="screen"
        android:paddingTop="5dp"
        android:weightSum="5">

        <AutoCompleteTextView
            android:id="@+id/start_act"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="2.15"
            android:background="@drawable/button_bg"
            android:dropDownHeight="match_parent"
            android:entries="@array/start_roomlist"
            android:hint="@string/start_txt"
            android:lines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/primary_light"
            android:textColorHint="@color/primary_light"
            android:textSize="24sp"
            android:elevation="-24dp"/>
        <!--<Spinner
            android:id="@+id/start_spinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:background="@android:color/holo_blue_light"
            android:entries="@array/start_roomlist"
            android:paddingEnd="10dp"
            android:spinnerMode="dialog" />-->
        <AutoCompleteTextView
            android:id="@+id/stop_act"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="2.15"
            android:background="@drawable/button_bg"
            android:dropDownHeight="match_parent"
            android:entries="@array/stop_roomlist"
            android:hint="@string/stop_txt"
            android:lines="1"
            android:paddingStart="10dp"
            android:textColor="@color/primary_light"
            android:textColorHint="@color/primary_light"
            android:textSize="24sp"
            android:elevation="-24dp"/>

        <!--<Spinner
            android:id="@+id/stop_spinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="@android:color/holo_blue_light"
            android:entries="@array/stop_roomlist"
            android:spinnerMode="dialog" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/scan_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_bg"
                android:elevation="10dp"
                android:text="@string/scan"
                android:textSize="26sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>